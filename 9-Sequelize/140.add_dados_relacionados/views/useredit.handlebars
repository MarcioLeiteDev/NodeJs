<div class="address-container">
    <h2>Endereços</h2>
    <form action="/address/create" method="post">
        <input type="hidden" name="UserId" value="{{user.id}}" />
        <div class="form-control">
            <label for="street">Rua</label>
            <input type="text" name="street" placeholder="Digite nome de sua rua">
        </div>

        <div class="form-control">
            <label for="number">Numero</label>
            <input type="text" name="number" placeholder="Digite numero da residencia">
        </div>

        <div class="form-control">
            <label for="city">Cidade</label>
            <input type="text" name="city" placeholder="Digite sua cidade">
        </div>

        <input type="submit" value="Incluir Endereço">

    </form>
</div>